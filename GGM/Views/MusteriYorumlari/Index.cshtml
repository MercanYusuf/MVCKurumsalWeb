@model IEnumerable<GGM.Models.Model.MusteriYorumlari>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<p>
    @Html.ActionLink("Yeni Yorum ", "Create",null,new{@class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.MusteriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MusteriYorum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.MusteriAd)
        </td>
        <td>
            @Html.Raw(item.MusteriYorum)
        </td>
        <td>
            <img class="img-responsive" src="@item.ResimURL " width="150" height="150" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.MusteriYorumlariId },new {@class="btn btn-warning"}) |
       
            @Html.ActionLink("Sil", "Delete", new { id=item.MusteriYorumlariId },new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
