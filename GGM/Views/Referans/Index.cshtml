@model IEnumerable<GGM.Models.Model.Referanslar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Yeni Referans ", "Create",null,new{@class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReferansAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(item.ReferansAd)
        </td>
        <td>
            <img class="img-responsive" src="@item.ResimURL " width="150" height="150" />
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.ReferansId },new{@class="btn btn-warning"}) |
           
            @Html.ActionLink("Sil", "Delete", new { id=item.ReferansId },new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
