@model IEnumerable<GGM.Models.Model.HizmetAna>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<p>
    @Html.ActionLink("Yeni Hizmet ", "Create",null,new{@class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.Raw(item.Aciklama)
        </td>
        <td>
            <img class="img-responsive" src="@item.ResimURL " style="width:700px" />
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.HizmetAnaId }, new { @class = "btn btn-warning" }) |

            @Html.ActionLink("Sil", "Delete", new { id = item.HizmetAnaId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
