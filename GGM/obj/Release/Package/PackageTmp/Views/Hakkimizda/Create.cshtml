@model GGM.Models.Model.Hakkimizda

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Hakkımızda Resim</h2>

@using (Html.BeginForm("Create", "Hakkimizda", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
  
    <div class="form-group ">
        <label for="curl" class="control-label col-lg-2">Resim </label>
        <div class="col-lg-10">
            <input type="file" class="form-control " name="ResimURL" accept=".jpg,.png,.jpeg" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
