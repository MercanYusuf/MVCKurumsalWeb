@model IEnumerable<GGM.Models.Model.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>$(document).ready(function () {
    $('#myTable').DataTable(
        {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
});</script>


<p>
    <a class="btn btn-primary " href="/Blog/Create">Yeni Blog Ekle</a>
</p>
<table class="table table-bordered table-striped table-responsive-sm" id="myTable">
    <thead>
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>ResimURL</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)    
    {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.Baslik.</td>
            <td>@item.Kategori.KategoriAd</td>
            <td><img src="@item.ResimURL" width="100" height="100" /></td>
            <td><a href="/Blog/Edit/@item.BlogId" class="btn btn-warning">Güncelle</a> | <a href="/Blog/Delete/@item.BlogId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
    

    </tbody>
</table>