<footer>
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="widget">
                    <h5 class="widgetheading">Sayfalarımız</h5>
                    <ul class="link-list">
                        <li><a href="/Hakkimiz/">Hakkımızda</a></li>
                        <li><a href="/Hizmetlerimiz/">Hizmetlerimiz</a></li>
                        <li><a href="/Referanslarimiz/">Referanslarımız</a></li>
                        <li><a href="/BlogPost/">Blog Yazıları</a></li>
                        <li><a href="/BizeUlasin/">Bize Ulaşın</a></li>
                       
                    </ul>

                </div>
            </div>
            <div class="span4">
                <div class="widget">
                    <h5 class="widgetheading">İletişim Adresimiz</h5>
                    <address>
                        <strong>@ViewBag.Iletisim.Adres</strong><br>
                     
                    </address>
                    <p>
                        <i class="icon-phone"></i> @ViewBag.Iletisim.Telefon <br>
                        <i class="icon-phone"></i> @ViewBag.Iletisim.Fax <br>
                        <i class="icon-envelope-alt"></i> @ViewBag.Iletisim.Email
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var item in ViewBag.HizmetAna)
                        {
                            <img src="@item.ResimURL" style="width: 75px;" height="75px" />
                        }

                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="span6">
                    <div class="copyright">
                        <p><span>&copy; GGM GÜMRÜK</span></p>
                    </div>

                </div>

                <div class="span6">
                    <div class="credits">
